{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QualityReport",
  "description": "Per-run quality report generated after every workflow completes. Captures efficiency, quality, loop, and outcome metrics for trend analysis and regression detection.",
  "type": "object",
  "required": [
    "correlationId",
    "runId",
    "issueId",
    "timestamp",
    "outcome",
    "efficiency",
    "quality",
    "loops",
    "cost"
  ],
  "properties": {
    "correlationId": {
      "type": "string",
      "format": "uuid"
    },
    "runId": {
      "type": "string",
      "format": "uuid"
    },
    "issueId": {
      "type": "integer"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "outcome": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["completed", "escalated", "aborted", "failed"]
        },
        "escalation_agent": {
          "type": "string",
          "description": "Agent that triggered escalation, if applicable"
        },
        "escalation_reason": {
          "type": "string",
          "description": "Why the workflow escalated, if applicable"
        },
        "gate_decisions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["gate_name", "decision"],
            "properties": {
              "gate_name": { "type": "string" },
              "decision": {
                "type": "string",
                "enum": ["approve", "reject", "modify", "timeout"]
              },
              "response_time_ms": { "type": "integer" }
            }
          }
        }
      }
    },
    "efficiency": {
      "type": "object",
      "required": ["total_duration_ms", "total_tokens_used", "total_llm_calls"],
      "properties": {
        "total_duration_ms": {
          "type": "integer",
          "description": "End-to-end workflow duration in milliseconds"
        },
        "per_agent_duration_ms": {
          "type": "object",
          "additionalProperties": { "type": "integer" },
          "description": "Duration breakdown by agent name"
        },
        "total_tokens_used": {
          "type": "integer",
          "description": "Total LLM tokens consumed (input + output)"
        },
        "input_tokens": {
          "type": "integer"
        },
        "output_tokens": {
          "type": "integer"
        },
        "total_llm_calls": {
          "type": "integer",
          "description": "Total LLM API invocations"
        },
        "total_tool_calls": {
          "type": "integer",
          "description": "Total MCP tool invocations"
        }
      }
    },
    "quality": {
      "type": "object",
      "required": ["review_verdict"],
      "properties": {
        "review_verdict": {
          "type": "string",
          "enum": ["approved", "approved_with_minor_issues", "changes_required", "rejected", "skipped"],
          "description": "Final review status"
        },
        "critical_findings_count": {
          "type": "integer"
        },
        "high_findings_count": {
          "type": "integer"
        },
        "medium_findings_count": {
          "type": "integer"
        },
        "low_findings_count": {
          "type": "integer"
        },
        "security_fixes_applied": {
          "type": "boolean"
        },
        "ci_status": {
          "type": "string",
          "enum": ["GREEN", "RED", "SKIPPED"]
        },
        "coverage_delta": {
          "type": "number",
          "description": "Change in test coverage percentage vs baseline"
        },
        "conflict_resolutions": {
          "type": "integer",
          "description": "Number of reviewer conflicts that required resolution"
        }
      }
    },
    "loops": {
      "type": "object",
      "required": ["review_developer_iterations", "tester_developer_iterations"],
      "properties": {
        "review_developer_iterations": {
          "type": "integer",
          "minimum": 0,
          "description": "Times review looped back to developer"
        },
        "tester_developer_iterations": {
          "type": "integer",
          "minimum": 0,
          "description": "Times tester looped back to developer"
        },
        "ci_fix_attempts": {
          "type": "integer",
          "minimum": 0
        },
        "e2e_fix_attempts": {
          "type": "integer",
          "minimum": 0
        },
        "total_loop_backs": {
          "type": "integer",
          "minimum": 0,
          "description": "Sum of all loop-back iterations"
        }
      }
    },
    "cost": {
      "type": "object",
      "properties": {
        "estimated_llm_cost_usd": {
          "type": "number",
          "description": "Estimated LLM API cost in USD"
        },
        "estimated_compute_cost_usd": {
          "type": "number",
          "description": "Estimated compute cost in USD"
        },
        "estimated_total_cost_usd": {
          "type": "number",
          "description": "Total estimated cost in USD"
        }
      }
    },
    "guardrail_violations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["guardrail", "severity", "agent"],
        "properties": {
          "guardrail": {
            "type": "string",
            "description": "Name of the guardrail that was triggered"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "agent": {
            "type": "string",
            "description": "Agent that triggered the violation"
          },
          "details": {
            "type": "string"
          }
        }
      },
      "description": "Security guardrail violations detected during the run"
    }
  }
}
