{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WorkPlan",
  "type": "object",
  "required": [
    "branchName",
    "tasks",
    "commands",
    "definitionOfDone"
  ],
  "properties": {
    "branchName": {
      "type": "string",
      "pattern": "^ai/issue-[0-9]+-[a-z0-9-]+$",
      "description": "Branch name following the pattern: ai/issue-<num>-<slug>"
    },
    "tasks": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": [
          "id",
          "area",
          "description",
          "filesLikely",
          "tests"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique task identifier (e.g., T1, T2)"
          },
          "area": {
            "type": "string",
            "enum": [
              "backend",
              "frontend",
              "infra",
              "docs"
            ]
          },
          "description": {
            "type": "string"
          },
          "filesLikely": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tests": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "dependsOn": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of task IDs that must be completed before this task can start",
            "default": []
          }
        }
      }
    },
    "commands": {
      "type": "object",
      "required": [
        "backendVerify",
        "frontendLint",
        "frontendTest",
        "e2e"
      ],
      "properties": {
        "backendVerify": {
          "type": "string"
        },
        "frontendLint": {
          "type": "string"
        },
        "frontendTest": {
          "type": "string"
        },
        "e2e": {
          "type": "string"
        }
      }
    },
    "definitionOfDone": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
