# Atlasia AI Orchestrator - Environment Variables Example
# Copy this file to .env and update with your actual values

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/ai
DB_USER=ai
DB_PASSWORD=ai

# HashiCorp Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
SPRING_CLOUD_VAULT_ENABLED=false

# Orchestrator Configuration
ORCHESTRATOR_TOKEN=changeme
REPO_ALLOWLIST=backend/,frontend/,docs/,infra/,ai/
WORKFLOW_PROTECT=.github/workflows/

# GitHub App Configuration
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY_PATH=
GITHUB_INSTALLATION_ID=

# GitHub Webhook Configuration
GITHUB_WEBHOOK_SECRET=

# LLM Configuration
LLM_ENDPOINT=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=
LLM_PROXY_HOST=
LLM_PROXY_PORT=8080
LLM_FALLBACK_ENDPOINT=https://api.deepseek.com/v1
LLM_FALLBACK_API_KEY=

# JWT Configuration
JWT_SECRET_KEY=
JWT_ACCESS_TOKEN_EXPIRATION_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7
JWT_ISSUER=atlasia-ai-orchestrator

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8080

# OAuth2 Configuration
OAUTH2_FRONTEND_CALLBACK_URL=http://localhost:4200/auth/callback

# When using Vault, these will be fetched from Vault instead of environment variables
# VAULT_OAUTH2_GITHUB_CLIENT_ID=
# VAULT_OAUTH2_GITHUB_CLIENT_SECRET=
# VAULT_OAUTH2_GOOGLE_CLIENT_ID=
# VAULT_OAUTH2_GOOGLE_CLIENT_SECRET=
# VAULT_OAUTH2_GITLAB_CLIENT_ID=
# VAULT_OAUTH2_GITLAB_CLIENT_SECRET=
# VAULT_ENCRYPTION_KEY=

# Canvas Configuration
MAX_CONCURRENT_BOLTS=5
SSE_TIMEOUT_MINUTES=30
DEFAULT_MODE=EXECUTION
ENABLED_AGENTS=PM,QUALIFIER,ARCHITECT,DEVELOPER,REVIEW,TESTER,WRITER
